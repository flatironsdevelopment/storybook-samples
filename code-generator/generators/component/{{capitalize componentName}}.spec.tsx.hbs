import { waitFor } from '@testing-library/react'
import { axe, renderWithTheme } from '@utils/test-utils'
import { {{capitalize componentName}} } from './{{capitalize componentName}}'

describe('<{{capitalize componentName}} />', () => {
	const testId = 'component-{{kebabCase componentName}}-id'

	it('should render the {{capitalize componentName}} component with no a11y violations', async () => {
		const { queryByTestId, container } = renderWithTheme(
			<{{capitalize componentName}} testId={testId} />
		)
		await waitFor(() => expect(queryByTestId(testId)).toBeTruthy())

		const acessibilityResults = await axe(container.innerHTML)
		expect(acessibilityResults).toHaveNoViolations()
	})
})
